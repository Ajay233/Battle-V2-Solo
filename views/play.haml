!!!
%html
  %head
    %link{:crossorigin => "anonymous", :href => "https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css", :integrity => "sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO", :rel => "stylesheet"}/
    %link{:href => "https://www.w3schools.com/w3css/4/w3.css", :rel => "stylesheet"}/
    %link{:crossorigin => "anonymous", :href => "https://use.fontawesome.com/releases/v5.7.2/css/all.css", :integrity => "sha384-fnmOCqbTlWIlj8LyTjo7mOUStjsKC4pOpQbqyi7RrhN7udi9RwhKkMHpvLbHG9Sr", :rel => "stylesheet"}/
    %link{:href => "https://fonts.googleapis.com/css?family=UnifrakturCook:700", :rel => "stylesheet"}/
    %link{:href => "/play.css", :rel => "stylesheet"}/
    %meta{:charset => "utf-8"}/
    %title Battle Main Page
    %style{:media => "screen"}
      :cdata
  %body
    %center
      %h1
        = @game.player_1.name
        vs #{@game.player_2.name} .... Fight
    .players-container
      %div{:style => "width:300px;"}
        %h1= @game.player_1.name
        .player-card
          %img#p1-pic{:alt => "on", :src => "/player1transparent.png"}/
        .w3-container
          .w3-back
            .w3-front{:style => "width:#{@game.player_1.hp}%;"}
              = @game.player_1.hp
              HP
      %div
        %center
          .turn
            - if flash[:gold]
              #flash-notice.gold-alert{:role => "alert"}
                %i.fas.fa-skull
                = flash[:gold]
                %i.fas.fa-skull
        %p#vs VS
        Status updates appear below:
        %center
          %div
            - if flash[:green]
              #flash-notice.green-alert{:role => "alert"}
                = flash[:green]
            - elsif flash[:red]
              #flash-notice.red-alert{:role => "alert"}
                = flash[:red]
            - elsif flash[:purple]
              #flash-notice.purple-alert{:role => "alert"}
                = flash[:purple]
            - elsif flash[:blue]
              #flash-notice.blue-alert{:role => "alert"}
                = flash[:blue]
            - elsif flash[:yellow]
              #flash-notice.yellow-alert{:role => "alert"}
                = flash[:yellow]
      %div{:style => "width:300px;"}
        %h1= @game.player_2.name
        .player-card
          %img#p2-pic{:alt => "", :src => "/player2transparent.png"}/
        .w3-container
          .w3-back
            .w3-front{:style => "width: #{@game.player_2.hp}%;"}
              = @game.player_2.hp
              HP
    %center
      .move-container
        %form{:action => "/attack", :method => "post"}
          .icons
            %i.fas.fa-fist-raised
          %input.submit{:type => "submit", :value => "Attack"}/
        %form{:action => "/paralyse", :method => "post"}
          .icons
            %i.fas.fa-diagnoses
          %input.submit{:type => "submit", :value => "Paralyse"}/
        %form{:action => "/poison", :method => "post"}
          .icons
            %i.fas.fa-skull-crossbones
          %input.submit{:type => "submit", :value => "Poison"}/
        %form{:action => "/sleep", :method => "post"}
          .icons
            %i.fas.fa-bed
          %input.submit{:type => "submit", :value => "Sleep"}/
        %form{:action => "/heal", :method => "post"}
          .icons
            %i.fas.fa-user-injured
          %input.submit{:type => "submit", :value => "Heal"}/
      %br/
